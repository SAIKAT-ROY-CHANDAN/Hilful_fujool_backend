generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  INACTIVE
}

model AboutUs {
  id                String          @id @default(uuid())
  title             String
  description       String
  featureTitle1     String
  featureShortDesc1 String
  featureTitle2     String
  featureShortDesc2 String
  featureTitle3     String
  featureShortDesc3 String

  aboutUsImages AboutUsImages[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model AboutUsImages {
  id        String   @id @default(uuid())
  imageUrl  String
  aboutUsId String
  aboutUs   AboutUs  @relation(fields: [aboutUsId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id               String   @id @default(uuid())
  author           String
  title            String
  shortDescription String
  description      String
  imageUrl         String
  status           Status   @default(ACTIVE)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  fullName  String
  email     String
  phone     String
  country   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactUs {
  id              String   @id @default(uuid())
  subTitle        String
  title           String
  companyNumber   String
  companyEmail    String
  companyLocation String
  facebookUrl     String
  instagramUrl    String
  youtubeUrl      String
  imageUrl        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FivePillar {
  id             String   @id @default(uuid())
  title          String
  description    String
  pillarImageUrl String
  status         Status   @default(ACTIVE)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Gallery {
  id        String   @id @default(uuid())
  imageUrl  String
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HeroImages {
  id            String      @id @default(uuid())
  url           String
  heroSectionId String
  heroSection   HeroSection @relation(fields: [heroSectionId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model HeroSection {
  id          String        @id @default(uuid())
  subtitle    String
  title       String
  description String
  youtubeUrl  String

  images    HeroImages[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model OthersAboutSection {
  id               String   @id @default(uuid())
  title            String
  description      String
  experienceYears  String
  trustedReviews   String
  servicesProvided String
  imageUrl         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Package {
  id           String        @id @default(uuid())
  title        String
  description  String
  duration     String
  country      String
  maxTravelers String
  minPax       String
  status       Status        @default(ACTIVE)

  packageImages PackageImage[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model PackageImage {
  id        String   @id @default(uuid())
  url       String
  packageId String
  package   Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id          String   @id @default(uuid())
  name        String
  author      String
  rating      Int
  description String
  imageUrl    String
  status      Status   @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Role {
  id          String           @id @default(uuid())
  name        String
  description String?
  email       String           @unique
  password    String
  imageUrl    String?
  status      Status           @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  permissions RolePermission[]
}

model RolePermission {
  id        String  @id @default(uuid())
  module    String
  canCreate Boolean @default(false)
  canEdit   Boolean @default(false)
  canDelete Boolean @default(false)
  status    Status  @default(ACTIVE)

  roleId String
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
}

model Service {
  id               String   @id @default(uuid())
  title            String
  shortDescription String
  description      String
  imageUrl         String
  status           Status   @default(ACTIVE)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
